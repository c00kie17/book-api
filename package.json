{
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "lint": "eslint 'resources/ts/**/*.{ts,tsx}'",
        "lint:fix": "eslint 'resources/ts/**/*.{ts,tsx}' --fix",
        "format": "prettier --write 'resources/ts/**/*.{ts,tsx,css}'",
        "format:check": "prettier --check 'resources/ts/**/*.{ts,tsx,css}'",
        "code-quality": "npm run lint && npm run format:check",
        "code-quality:fix": "npm run lint:fix && npm run format",
        "test": "jest",
        "postinstall": "npm run build"
    },
    "engines": {
        "node": "18.x",
        "npm": "9.x"
    },
    "devDependencies": {
        "@babel/core": "^7.27.1",
        "@babel/preset-env": "^7.27.2",
        "@babel/preset-react": "^7.27.1",
        "@tailwindcss/postcss": "^4.1.7",
        "@tailwindcss/vite": "^4.1.7",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.3.0",
        "@types/jest": "^29.5.14",
        "@types/react": "^19.1.4",
        "@types/react-dom": "^19.1.5",
        "@types/testing-library__jest-dom": "^5.14.9",
        "@typescript-eslint/eslint-plugin": "^8.32.1",
        "@typescript-eslint/parser": "^8.32.1",
        "@vitejs/plugin-react": "^4.4.1",
        "autoprefixer": "^10.4.21",
        "axios": "^1.8.2",
        "babel-jest": "^29.7.0",
        "concurrently": "^9.0.1",
        "eslint": "^9.27.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-jest": "^28.11.0",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "eslint-plugin-prettier": "^5.4.0",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "laravel-vite-plugin": "^1.2.0",
        "postcss": "^8.5.3",
        "tailwindcss": "^4.1.7",
        "ts-jest": "^29.3.4",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.32.1",
        "vite": "^6.2.4"
    },
    "dependencies": {
        "@inertiajs/react": "^2.0.11",
        "@types/file-saver": "^2.0.7",
        "file-saver": "^2.0.5",
        "lucide-react": "^0.511.0",
        "react": "^19.1.0",
        "react-dom": "^19.1.0"
    },
    "jest": {
        "testEnvironment": "jsdom",
        "transform": {
            "^.+\\.(ts|tsx)$": [
                "ts-jest",
                {
                    "tsconfig": "tsconfig.json"
                }
            ],
            "^.+\\.(js|jsx)$": "babel-jest"
        },
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/resources/js/$1"
        },
        "setupFilesAfterEnv": [
            "<rootDir>/jest.setup.ts"
        ],
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/__tests__/__mocks__/"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    }
}
